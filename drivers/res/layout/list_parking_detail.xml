<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_parking_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_type"
    android:orientation="horizontal" >
    <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="3"
      android:layout_height="match_parent"
      android:orientation="vertical">
       <TextView 
       android:id="@+id/tv_license_number_parking_detail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:textColor="#E94509"
       android:text="test"
       android:textSize="18sp"/>
       <TextView 
       android:id="@+id/tv_start_time_parking_detail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:textColor="#E94509"
              android:text="test"
       android:textSize="15sp"/>
       <TextView 
       android:id="@+id/tv_location_parking_detail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingLeft="5dp"
       android:textColor="#E94509"
       android:text="test"
       android:drawableLeft="@drawable/ic_add_location_black_18dp"
       android:textSize="12sp"/>
    </LinearLayout>
    <ImageView 
        android:id="@+id/iv_enter_message_detail"
        android:src="@drawable/ic_chevron_right_black_36dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"/>
</LinearLayout>