<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/list_record_history"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal" >
    <TextView
        android:id="@+id/tv_licensePlateNumber_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#EBEBEB"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:textSize="14sp"
        android:text="津HG9025"
        android:textColor="@color/orange"/>
     <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
              android:id="@+id/tv_startTime_record"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#EBEBEB"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:layout_gravity="center_horizontal"
              android:text="2017.5.17 17:29:25"
              android:textSize="12sp"/>
         <TextView
              android:id="@+id/tv_leaveTime_record"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#EBEBEB"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:layout_gravity="center_horizontal"
              android:text="2017.5.17 21:39:35"
              android:textSize="12sp"/>
           <TextView
              android:id="@+id/tv_parking_name_record"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#EBEBEB"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:layout_gravity="center_horizontal"
              android:text="天津市-津南区-易华录停车场"
              android:drawableLeft="@drawable/ic_add_location_black_18dp"
              android:textSize="10sp"/>
        </LinearLayout>
        <TextView
              android:id="@+id/tv_payment_pattern_record"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
             android:background="#EBEBEB"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:gravity="center"
             android:text="移动支付"
             android:textSize="12sp"/>
       <TextView
             android:id="@+id/tv_payment_bill_record"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.5"
             android:background="#EBEBEB"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:gravity="center"
             android:text="5元"
             android:textSize="12sp"/>
</LinearLayout>