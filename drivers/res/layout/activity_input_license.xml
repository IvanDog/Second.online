<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#E94509"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_input_license_plate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/ic_clear_black_18dp"
        android:ems="10" >
        <requestFocus />
    </EditText>
    
    <Button
         android:id="@+id/bt_confirm__input_license_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="确认绑定" />
     
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >
       <TextView
       android:id="@+id/tv_location_input_license_title"
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:gravity="center"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:text="地区"
       android:textSize="20sp" 
       android:background="#EBEBEB"
       android:textColor="@color/white" />
        
      <TextView
       android:id="@+id/tv_letter_input_license_title"
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:gravity="center"
       android:text="字母"
       android:textSize="20sp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:background="#EBEBEB"
       android:textColor="@color/white" />
      <TextView
       android:id="@+id/tv_number_input_license_title"
       android:layout_width="0dip"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:gravity="center"
       android:text="数字"
       android:textSize="20sp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:background="#EBEBEB"
       android:textColor="@color/white"  />
    </LinearLayout>

    <FrameLayout  
        android:id="@+id/main_container"  
        android:background = "#EBEBEB"
        android:layout_width="match_parent"  
        android:layout_height="match_parent"  /> 
</LinearLayout>