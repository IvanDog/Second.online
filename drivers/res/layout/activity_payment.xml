<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#FFFFFF"
    android:orientation="vertical" >
       <TextView
        android:id="@+id/tv_payment_information_title_leaving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="3dp"
        android:drawableLeft="@drawable/ic_payment_information_title_48px"
        android:drawablePadding="5dp"
        android:text="结算信息"
        android:textSize="20sp"
        android:textColor="#E94509"/>

         <LinearLayout 
        android:id="@+id/linear_parking_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_payment_information_title_leaving"
        android:orientation="horizontal">
             <TextView 
             android:id="@+id/tv_payment_information_title_leaving"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:paddingTop="3dp"
             android:paddingBottom="3dp"
             android:gravity="left"
             android:text="收费信息"
             android:textSize="15sp"/>
             <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >
                    <TextView 
                     android:id="@+id/tv_license_number_leaving"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingTop="5dp"
                     android:paddingBottom="3dp"
                     android:gravity="left"
                     android:textSize="15sp"/>
                     <TextView 
                     android:id="@+id/tv_start_time_leaving"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingTop="3dp"
                     android:paddingBottom="3dp"
                     android:gravity="left"
                     android:textSize="15sp"/>
                     <TextView 
                     android:id="@+id/tv_leave_time_leaving"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingTop="3dp"
                     android:paddingBottom="3dp"
                     android:gravity="left"
                     android:textSize="15sp"/>
                    <TextView 
                     android:id="@+id/tv_fee_Scale_leaving"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingTop="3dp"
                     android:paddingBottom="3dp"
                     android:gravity="left"
                     android:textSize="15sp"/>
                     <TextView 
                     android:id="@+id/tv_expense_leaving"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingTop="3dp"
                     android:paddingBottom="3dp"
                     android:gravity="left"
                     android:textSize="15sp"/>
                     <TextView 
                     android:id="@+id/tv_expense_discount_leaving"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingTop="3dp"
                     android:paddingBottom="3dp"
                     android:gravity="left"
                     android:textSize="15sp"/>
                     <TextView 
                     android:id="@+id/tv_expense_final_leaving"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingTop="3dp"
                     android:paddingBottom="3dp"
                     android:gravity="left"
                     android:textSize="15sp"/>
                     <TextView 
                     android:id="@+id/tv_coupon_choose"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/coupon_expand"
                     android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingTop="3dp"
                     android:paddingBottom="3dp"
                     android:gravity="left"
                     android:textSize="15sp"/>
             </LinearLayout>
        </LinearLayout>
        <LinearLayout 
          android:id="@+id/linear_payment_information"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/linear_parking_information"
          android:orientation="horizontal">
               <TextView 
                android:id="@+id/tv_payment_type_title_leaving"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="left"
                android:text="支付方式"
                android:textSize="15sp"/>
               <RadioGroup  
                android:id="@+id/rg_payment_type_leaving"  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content"  
                android:checkedButton="@+id/paymentType"  
                android:orientation="vertical">  
                    <RadioButton  
                    android:id="@+id/rb_account_payment_leaving"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content" 
                    android:drawableRight="@drawable/ic_wallet_32px"
                    android:drawablePadding="5dp"
                    android:text="余额"/> 
                   <RadioButton  
                    android:id="@+id/rb_alipay_payment_leaving"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:drawableRight="@drawable/ic_alipay_32px"
                    android:drawablePadding="5dp"
                    android:text="支付宝"/>  
                   <RadioButton  
                    android:id="@+id/rb_wechatpay_payment_leaving"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"  
                    android:drawableRight="@drawable/ic_wechat_32px"
                    android:drawablePadding="5dp"
                    android:text="微信"/>  
              </RadioGroup>  
        </LinearLayout>

        <LinearLayout
          android:id="@+id/parking_detail_buttons"
          android:layout_below="@+id/linear_payment_information"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="bottom"
          android:layout_alignParentBottom="true">
            <Button 
              android:id="@+id/bt_confirm_payment_leaving"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="10dp"
              android:gravity="center"
              android:textColor="#E94509"
              android:text="确认支付" />
<!--             <Button 
              android:id="@+id/bt_cancel_payment"
              android:background = "@drawable/ic_ok"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:textColor="#E94509"
              android:text="取消" /> -->
    </LinearLayout>
</RelativeLayout>