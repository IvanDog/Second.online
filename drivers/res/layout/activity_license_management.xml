<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
           <TextView
           android:id="@+id/tv_license_plate_title"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_gravity="center"
           android:background="@color/gray"
           android:text="绑定车辆，钱包自动缴扣停车费"
            android:textSize="20sp"/>
           <Button 
           android:id="@+id/bt_enter_bind_license_plate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:textSize="50sp"
           android:text="+"
           android:background="@drawable/ic_attendance_button"/>
           <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="vertical" >
             <LinearLayout 
               android:id="@+id/linear_license_plate_first"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:background="#EBEBEB"
               android:layout_margin="10dp"
               android:orientation="horizontal" >
               <TextView
                   android:id="@+id/tv_license_plate_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>
               <ImageView 
                   android:id="@+id/iv_delete_license_plate_first"
                   android:src="@drawable/ic_unbind_18dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:clickable="true"/>
             </LinearLayout>
             <LinearLayout 
               android:id="@+id/linear_license_plate_second"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="10dp"
               android:background="#EBEBEB"
               android:orientation="horizontal" >
               <TextView
                   android:id="@+id/tv_license_plate_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>
               <ImageView 
                   android:id="@+id/iv_delete_license_plate_second"
                   android:src="@drawable/ic_unbind_18dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:clickable="true"/>
             </LinearLayout>
           </LinearLayout>
</LinearLayout>