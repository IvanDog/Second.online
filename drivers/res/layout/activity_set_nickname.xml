<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_set_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        android:text="设置昵称"
        android:drawableLeft="@drawable/ic_mood_black_36dp"/>
     <View
         android:id="@+id/view_divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_set_nickname"
        android:background="#FF909090"/>
     <LinearLayout 
         android:id="@+id/linear_set_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_divider"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="true"  
        android:focusableInTouchMode="true"
        android:orientation="vertical" >
              <EditText
                android:id="@+id/et_set_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="请输入您的昵称"
                android:maxLines="1"
                android:singleLine="true" />
            <Button 
                android:id="@+id/bt_confirm_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="完成" />
     </LinearLayout>
</RelativeLayout>