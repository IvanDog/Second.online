<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/list_parking_coupon"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#BFBFBF"
android:orientation="vertical" >
 <com.example.driver.view.CouponsView
     android:id="@+id/cv_coupon"
    android:orientation="horizontal"
    android:background="@drawable/button_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:id="@+id/tv_coupon_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="8dp"
        android:drawableBottom="@drawable/ic_coupon_32px"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"/>
     <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
              android:id="@+id/tv_start_time_coupon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#00000000"
              android:paddingLeft="3dp"
              android:paddingRight="3dp"
              android:layout_gravity="center_horizontal"
              android:textColor="#000000"
              android:textSize="15sp"/>
           <TextView
              android:id="@+id/tv_end_time_coupon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#00000000"
              android:paddingLeft="3dp"
              android:paddingRight="3dp"
              android:layout_gravity="center_horizontal"
              android:textColor="#000000"
              android:textSize="15sp"/>
           <TextView
              android:id="@+id/tv_notify_coupon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#00000000"
              android:paddingLeft="3dp"
              android:paddingRight="3dp"
              android:layout_gravity="center_horizontal"
              android:textColor="#EBEBEB"
              android:textSize="12sp"/>
        </LinearLayout>
       <TextView
             android:id="@+id/tv_denomination_coupon"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.5"
             android:background="#00000000"
             android:paddingLeft="1dp"
             android:paddingRight="1dp"
             android:drawableLeft="@drawable/ic_money_32px"
             android:gravity="center"
             android:textColor="#000000"
             android:text="5å…ƒ"
             android:textSize="15sp"/>
        <ImageView 
            android:id="@+id/iv_enter_coupon_detail"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            android:visibility="gone"/>
    </com.example.driver.view.CouponsView>
    <include layout="@layout/list_parking_coupon_hide"/>
</LinearLayout>