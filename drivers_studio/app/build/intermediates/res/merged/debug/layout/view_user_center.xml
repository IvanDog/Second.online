<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEBEB"
    android:orientation="horizontal" >
        <TextView 
            android:id="@+id/tv_user_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:gravity="center_vertical|center"
            android:text="用户中心"
            android:clickable="true"
            android:singleLine="true"
            android:drawablePadding="-10sp"
            android:drawableLeft="@drawable/ic_user_center"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
            <TextView 
            android:id="@+id/tv_account_balance_user_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:textSize="15sp"
            android:drawableRight="@drawable/ic_chevron_right_black_18dp"
            android:clickable="true"
            android:text="账户余额: 10元"/>
            <TextView 
            android:id="@+id/tv_coupon_user_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center"
            android:textSize="15sp"
            android:drawableRight="@drawable/ic_chevron_right_black_18dp"
            android:clickable="true"
            android:text="停车券: 1张"/>
        </LinearLayout>
    </LinearLayout>
     <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FF909090"/>
      <ListView   
            android:id="@+id/list_function_user_center"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:divider="#FF909090"        
            android:dividerHeight="1dp" >            
     </ListView>
</LinearLayout>