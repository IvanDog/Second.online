<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
            <EditText
                android:id="@+id/et_set_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                android:hint="@string/notify_set_passwd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#000000"
                android:singleLine="true" />
            <EditText
                android:id="@+id/et_re_input_passwd"
                android:layout_below="@+id/et_set_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                android:hint="@string/notify_re_input_passwd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#000000"
                android:singleLine="true" />
            <Button 
                android:id="@+id/bt_finish_register"
                android:layout_below="@+id/et_re_input_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finish_register" />
</RelativeLayout>