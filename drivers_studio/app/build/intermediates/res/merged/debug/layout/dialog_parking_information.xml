<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="25dp"
    android:layout_gravity="bottom" 
    android:orientation="vertical"
    style="@style/dialog" 
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
             android:id="@+id/tv_poi_name_dialog"
             android:layout_height="wrap_content" 
             android:layout_width="match_parent"
             android:paddingTop="3dp"
             android:paddingLeft="3dp"
             android:paddingRight="3dp"
             android:textSize="15sp"
             android:textColor="#E94509"
             android:drawableLeft="@drawable/ic_parking_name_24px"
             android:text="停车场名"  />
   <LinearLayout 
        android:id="@+id/linear_parking_detail_dialog"
        android:layout_below="@+id/tv_poi_name_dialog"
        android:layout_height="wrap_content" 
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout 
             android:id="@+id/linear_parking_number_fee_dialog"
             android:layout_below="@+id/tv_poi_name"
             android:layout_height="wrap_content" 
             android:layout_width="match_parent"
             android:orientation="horizontal">
            <TextView
             android:id="@+id/tv_parking_free_dialog"
             android:layout_height="wrap_content" 
             android:layout_width="0dp"
             android:layout_weight="1"
             android:paddingLeft="3dp"
             android:paddingRight="3dp"
             android:drawableLeft="@drawable/ic_parking_idle_24px"
             android:textSize="12sp"
             android:textColor="#E94509" />
            <TextView
             android:id="@+id/tv_parking_fee_dialog"
             android:layout_height="wrap_content" 
             android:layout_width="0dp"
             android:layout_weight="1"
             android:paddingLeft="3dp"
             android:paddingRight="3dp"
             android:drawableLeft="@drawable/ic_unit_price_24px"
             android:textSize="12sp"
             android:textColor="#E94509" />
          <TextView
             android:id="@+id/tv_parking_free_time_duration_dialog"
             android:layout_height="wrap_content" 
             android:layout_width="0dp"
             android:layout_weight="1"
             android:paddingLeft="3dp"
             android:paddingRight="3dp"
             android:drawableLeft="@drawable/ic_free_one_hour_24px"
             android:textSize="12sp"
             android:textColor="#E94509" />
<!--             <ImageView 
             android:id="@+id/iv_enter_display_parking_dialog_detail"
             android:src="@drawable/ic_expand_more_black_18dp"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_gravity="right"
             android:paddingLeft="3dp"
             android:paddingRight="3dp"
             android:textSize="15sp"/> -->
         </LinearLayout>
         <LinearLayout 
             android:id="@+id/linear_parking_number_detail_dialog"
             android:layout_height="wrap_content" 
             android:layout_width="match_parent"
             android:orientation="vertical">
              <View  
                 android:layout_height="1px"
                 android:layout_width="match_parent"
                 android:layout_marginTop="1dp"
                 android:background="#66CCFF"/>
              <LinearLayout 
                 android:layout_height="wrap_content" 
                 android:layout_width="match_parent"
                 android:orientation="horizontal">
                <TextView
                     android:id="@+id/tv_parking_type_certification_or_not_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_certification_24px"
                     android:textSize="12sp"
                     android:textColor="#E94509"
                     android:text="已认证"  />
                <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                 <TextView
                     android:id="@+id/tv_parking_type_free_or_charge_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_should_pay_24px"
                     android:textSize="12sp"
                     android:textColor="#E94509"
                     android:text="收费"  />
                  <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                  <TextView
                     android:id="@+id/tv_parking_type_manual_or_auto_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                      android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_pay_auto_24px"
                     android:textSize="12sp"
                     android:textColor="#E94509"
                     android:text="自助" />
                 <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                 <TextView
                     android:id="@+id/tv_parking_type_network_or_venue_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="1dp"
                     android:paddingRight="1dp"
                     android:drawableLeft="@drawable/ic_network_24px"
                     android:textSize="12sp"
                     android:textColor="#E94509"
                     android:text="联网"  />
              </LinearLayout>
              <View  
                 android:layout_height="1px"
                 android:layout_width="match_parent"
                 android:layout_marginTop="1dp"
                 android:background="#66CCFF"/>
              <LinearLayout 
                 android:layout_height="wrap_content" 
                 android:layout_width="match_parent"
                 android:orientation="horizontal">
               <TextView
                     android:id="@+id/tv_payemnt_type_cash_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:textSize="12sp"
                     android:textColor="#E94509"
                     android:typeface="monospace"
                     android:text="支付方式"  />
                 <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                <TextView
                     android:id="@+id/tv_payment_type_cash_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="0.8"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_cash_16px"
                     android:textSize="10sp"
                     android:textColor="#404040"
                     android:typeface="monospace"
                     android:text="现金"  />
                <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                 <TextView
                     android:id="@+id/tv_payment_type_pos_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1.2"
                     android:gravity="center"
                     android:paddingLeft="1dp"
                     android:paddingRight="1dp"
                      android:drawableLeft="@drawable/ic_pos_16px"
                     android:textSize="10sp"
                     android:textColor="#404040"
                     android:text="POS机"  />
                  <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                  <TextView
                     android:id="@+id/tv_payment_type_ali_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                      android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_ali_24px"
                     android:textSize="10sp"
                     android:textColor="#404040"
                     android:text="支付宝" />
                 <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                 <TextView
                     android:id="@+id/tv_payment_type_wechat_dialog"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_wechat_16px"
                     android:textSize="10sp"
                     android:textColor="#404040"
                     android:text="微信"  />
              </LinearLayout>
              <View  
                   android:layout_height="1px"
                   android:layout_width="match_parent"
                   android:background="#66CCFF"/>
<!--               <TextView
                   android:id="@+id/tv_parking_location_dialog"
                   android:layout_height="wrap_content" 
                   android:layout_width="match_parent"
                   android:paddingLeft="3dp"
                   android:paddingRight="3dp"
                   android:textSize="12sp"
                   android:textColor="#E94509"/> -->
        </LinearLayout>
    </LinearLayout>
            <LinearLayout 
             android:id="@+id/linear_parking_buttons_dialog"
             android:layout_below="@+id/linear_parking_detail_dialog"
             android:layout_height="wrap_content" 
             android:layout_width="match_parent"
             android:orientation="horizontal">
             <TextView 
                 android:id="@+id/tv_detail_dialog"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:paddingLeft="25dp"
                 android:gravity="center"
                 android:background="@drawable/button_close_route"
                 android:textSize="15sp"
                 android:text="路线"
                 android:textColor="#E94509"
                 android:drawableLeft="@drawable/ic_route_24px"
                 android:drawablePadding="-40dp"
                 android:clickable="true"/>
               <TextView 
                 android:id="@+id/tv_navigation_dialog"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:paddingLeft="25dp"
                 android:gravity="center"
                 android:background="@drawable/button_close_route"
                 android:textSize="15sp"
                 android:text="去这里"
                 android:textColor="#E94509"
                 android:drawableLeft="@drawable/ic_navigation_32px"
                 android:drawablePadding="-40dp"
                 android:clickable="true"/>
    </LinearLayout>
</RelativeLayout>