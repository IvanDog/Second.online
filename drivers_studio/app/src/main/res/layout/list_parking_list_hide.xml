<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_parking_list_hide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="#FFFFFF"
    android:visibility="gone">
   <ImageView 
     android:id="@+id/iv_parkingphoto_hide"
     android:background="@drawable/ic_my_parking_more"
     android:layout_weight="1"  
     android:layout_width="0dp"
     android:layout_gravity="center_vertical"
     android:layout_height="match_parent"/>
    <LinearLayout
      android:layout_weight="3"  
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical" >
        <TextView 
          android:id="@+id/tv_parkingname_hide"
          android:layout_weight="1"  
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"
          android:textColor="#E94509"
          android:textSize="12sp" />
        <TextView 
          android:id="@+id/tv_location_hide"
          android:layout_weight="1"  
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"
          android:textColor="#E94509"
          android:textSize="12sp" />
        <LinearLayout
          android:id="@+id/linear_parking_number_detail_hide"
          android:layout_weight="1"  
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:orientation="horizontal" >
          <TextView
            android:id="@+id/tv_parking_number_total_hide"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="10sp"
            android:textColor="#E94509"/>
          <TextView
            android:id="@+id/tv_parking_number_idle_hide"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="10sp"
            android:textColor="#E94509"/>
           <TextView
            android:id="@+id/tv_parking_fee_hide"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="10sp"
            android:textColor="#E94509"/>
            <TextView
            android:id="@+id/tv_parking_free_time_duration_hide"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="10sp"
            android:textColor="#E94509"/>
       </LinearLayout>
       <LinearLayout 
                 android:layout_height="wrap_content" 
                 android:layout_width="match_parent"
                 android:orientation="horizontal">
                <TextView
                     android:id="@+id/tv_parking_type_certification_or_not_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_certification_24px"
                     android:textSize="10sp"
                     android:textColor="#E94509"
                     android:text="已认证"  />
                <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                 <TextView
                     android:id="@+id/tv_parking_type_free_or_charge_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_should_pay_24px"
                     android:textSize="10sp"
                     android:textColor="#E94509"
                     android:text="收费"  />
                  <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                  <TextView
                     android:id="@+id/tv_parking_type_manual_or_auto_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                      android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_pay_auto_24px"
                     android:textSize="10sp"
                     android:textColor="#E94509"
                     android:text="自动收费" />
                 <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                 <TextView
                     android:id="@+id/tv_parking_type_network_or_venue_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="1dp"
                     android:paddingRight="1dp"
                     android:drawableLeft="@drawable/ic_network_24px"
                     android:textSize="10sp"
                     android:textColor="#E94509"
                     android:text="联网结算"  />
              </LinearLayout>
              <LinearLayout 
                 android:layout_height="wrap_content" 
                 android:layout_width="match_parent"
                 android:orientation="horizontal">
               <TextView
                     android:id="@+id/tv_payemnt_type_cash_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:textSize="12sp"
                     android:textColor="#E94509"
                     android:typeface="monospace"
                     android:text="支付"  />
                 <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                <TextView
                     android:id="@+id/tv_payemnt_type_cash_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="0.8"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_cash_16px"
                     android:textSize="10sp"
                     android:textColor="#404040"
                     android:typeface="monospace"
                     android:text="现金"  />
                <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                 <TextView
                     android:id="@+id/tv_payemnt_type_pos_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1.2"
                     android:gravity="center"
                     android:paddingLeft="2dp"
                     android:paddingRight="2dp"
                      android:drawableLeft="@drawable/ic_pos_16px"
                      android:drawableRight="@drawable/ic_close_16px"
                     android:textSize="10sp"
                     android:textColor="#404040"
                     android:text="POS机"  />
                  <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                  <TextView
                     android:id="@+id/tv_payemnt_type_ali_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                      android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_ali_24px"
                     android:textSize="10sp"
                     android:textColor="#404040"
                     android:text="支付宝" />
                 <View  
                     android:layout_width="1dip"
                     android:layout_height="match_parent"
                     android:layout_marginTop="1dp"
                     android:background="#66CCFF"
                     android:layout_gravity="center_horizontal"/>
                 <TextView
                     android:id="@+id/tv_parking_type_wechat_list"
                     android:layout_height="wrap_content" 
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:paddingLeft="3dp"
                     android:paddingRight="3dp"
                     android:drawableLeft="@drawable/ic_wechat_16px"
                     android:textSize="10sp"
                     android:textColor="#404040"
                     android:text="微信"  />
              </LinearLayout>
    </LinearLayout>
    
</LinearLayout>